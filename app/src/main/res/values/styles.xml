<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryDark">@color/red_dark_dark</item>
        <item name="colorAccent">@color/red_light</item>
    </style>

    <!-- Chat activity abar theme. -->
    <style name="ChatActivityBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name ="android:icon">@color/white</item>


    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryDark">@color/red_dark_dark</item>
        <item name="colorAccent">@color/red_light</item>
    </style>




    <style name="Theme.AngelicaAppBar" parent="Theme.Design.NoActionBar">

        <item name="colorPrimary">@color/red_dark</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/red_dark_dark</item>


    </style>

    <style name="Theme.AngelicaAppBar.Popup" parent="Theme.Design.NoActionBar">

        <item name="android:colorBackground">@color/red_dark_dark</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>




</resources>
